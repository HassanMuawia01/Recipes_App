<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="20dp"
    android:background="@drawable/card_shape">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="15dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pizza_sample" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/category_tittle"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-20dp"
        android:fontFamily="@font/poppins"
        android:maxLength="40"
        android:maxLines="2"
        android:text="simple text is here "
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="6dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toStartOf="@+id/category_time"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/category_tittle"
        app:layout_constraintTop_toBottomOf="@+id/category_tittle"
        app:srcCompat="@drawable/clock_icon" />

    <TextView
        android:id="@+id/category_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="34dp"
        android:text=" 30 mins"
        android:textSize="16dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/category_tittle"
        app:layout_constraintStart_toStartOf="@+id/category_tittle"
        app:layout_constraintTop_toBottomOf="@+id/category_tittle" />

    <ImageView
                android:id="@+id/next"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/card_back_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="5dp"
                app:tint="#019267"
                app:srcCompat="@drawable/card_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>